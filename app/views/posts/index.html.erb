<h1 class = "post_header">List of all posts on this site</h1>

<table>
  <tr class = "table_head">
    <th>Title</th>
    <th>Body</th>
    <th>Data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr class = "table_body">
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= post.data %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
